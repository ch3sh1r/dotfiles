use strict;
use warnings;

my ($scan, $essid, $channel, @point);
my $i = 0;

$scan = `iwlist wlan0 scan`;
#$essid = s/.*ESSID:"(.*)".*/$1/g;
#$channel = s/.*Channel:(\d{1,2}).*/$1/g;
while($scan){
    ($point[$i], $scan) = split (/\n\n/, $scan, 2);
    $i += 1;
}
print $scan;

