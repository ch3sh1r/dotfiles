#!/usr/bin/python
import matplotlib.pyplot as plt
from numpy import *

def euler(n):
     tot, pos = 0, n-1
     while pos>0:
        if euclid(pos,n)==1: tot += 1
        pos -= 1
     return tot

def euclid(a,b):
     while b:
        a, b = b, a % b
     return a


x = xrange(10)
y1 = [euler(2**i-1) for i in x]
y2 = [2**(i-1)-1 for i in x]

plt.plot(x, y1, 'ko',
         x, y2, 'k:')

plt.xlabel('x')
plt.ylabel('y')
plt.title('Checking Euler\'s function estimate.')
plt.legend(['Euler\'s function.',
            'Estimate.'],
            loc='upper left')
plt.show()
