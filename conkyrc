TEXT
${color grey}Current time: ${color}${time %k:%M} ${time %A %d %Y}
${color grey}Uptime:$color $uptime ($loadavg)
${color grey}CPU:$color $cpu% (${freq_dyn 1}&${freq_dyn 2}) ${cpubar 4}
${color grey}RAM:$color $mem/$memmax ${membar 4}
${color grey}Swp:$color $swap/$swapmax ${swapbar 4} 
${color grey}FS: $color${fs_used /}/${fs_size /} ${fs_bar 4 /}
${color grey}Entropy: $color$entropy_avail${color grey} from $color$entropy_poolsize ${entropy_bar 4}
${color grey}Battery: $color$battery_percent [$battery_time]  
${color grey}Mail: $color${texeci 10 python .script/mail.py}
$hr
${color grey}Network interfaces${color}
 ${color grey}lo:  Up $color ${upspeed lo} k/s${color grey} Down $color ${downspeed lo} k/s
      ${color grey}[IP ${color}${addrs lo}${color grey}]${color}${if_up eth0}
 ${color grey}eth0:  Up $color ${upspeed eth0} k/s${color grey} Down $color ${downspeed eth0} k/s
      ${color grey}[IP ${color}${addrs eth0}${color grey}]${color}${endif}${if_up wlan0}
 ${color grey}wlan0:  Up $color ${upspeed wlan0} k/s${color grey} Down $color ${downspeed wlan0} k/s
      ${color grey}[IP ${color}${addrs wlan0}${color grey}]${color}${endif}${if_up ppp0}
 ${color grey}ppp0:  Up $color ${upspeed ppp0} k/s${color grey} Down $color ${downspeed ppp0} k/s
      ${color grey}[IP ${color}${addrs ppp0}${color grey}]${color}${endif}${if_up tun0}
 ${color grey}tun0:  Up $color ${upspeed tun0} k/s${color grey} Down $color ${downspeed tun0} k/s
      ${color grey}[IP ${color}${addrs tun0}${color grey}]${color}${endif}
$hr
${color grey}Processes$color $processes  ${color grey}Running$color $running_processes
${color grey} Name             PID    CPU%   MEM%
${color grey} ${top name 1} $color${top pid 1} ${top cpu 1} ${top mem 1}
${color grey} ${top name 2} $color${top pid 2} ${top cpu 2} ${top mem 2}
${color grey} ${top name 3} $color${top pid 3} ${top cpu 3} ${top mem 3}
${color grey} ${top name 4} $color${top pid 4} ${top cpu 4} ${top mem 4}
${color grey} ${top name 5} $color${top pid 5} ${top cpu 5} ${top mem 5}
