#!/bin/bash
# Вкл/выкл точку типа ad-hoc.

if [ $1 ] ; then
    case $1 in
        up)
            sudo iwconfig wlan0 mode Ad-Hoc
            sudo iwconfig wlan0 channel 4
            sudo iwconfig wlan0 essid NW
            sudo ifconfig wlan0 up 192.168.0.1
            sudo firestarter > /dev/null &
            #sudo firestarter --start-hidden > /dev/null &
        ;;
        down)
            sudo ifconfig wlan0 down
            sudo killall -9 firestarter > /dev/null
        ;;
        setup)
            sudo rmmod acer_wmi
            sudo modprobe acer_wmi
            sudo rfkill unblock all
            sudo rmmod -f acer_wmi
        ;;
    esac
else
    echo "Usage:"
    echo "  wifi up    - create ad-hoc."
    echo "  wifi down  - remove ad-hoc."       
    echo "  wifi setup - b570e quickfix."       
fi

